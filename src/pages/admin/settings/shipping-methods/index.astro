---
import AdminLayout from "../../../../layouts/AdminLayout.astro";
import { ShippingMethodsManager } from "../../../../components/admin/ShippingMethodsManager";
---

<AdminLayout title="Shipping Methods">
  <div class="container py-6 space-y-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold tracking-tight">Shipping Methods</h1>
        <p class="text-muted-foreground">
          Manage shipping methods and their delivery fees for your store.
        </p>
      </div>
    </div>

    <ShippingMethodsManager client:idle />
  </div>
</AdminLayout>
