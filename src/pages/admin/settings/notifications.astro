---
import AdminLayout from "@/layouts/AdminLayout.astro";
import FirebaseSettingsForm from "@/components/admin/settings/FirebaseSettingsForm";
---

<AdminLayout title="Notification Settings">
  <div class="space-y-6">
    <div class="flex flex-col gap-2">
      <h1 class="text-3xl font-bold tracking-tight">Notification Settings</h1>
      <p class="text-muted-foreground">
        Manage how your store sends and receives notifications.
      </p>
    </div>

    <div class="grid gap-6">
      <FirebaseSettingsForm client:idle />
    </div>
  </div>
</AdminLayout>
