---
import AdminLayout from "../../../../layouts/AdminLayout.astro";
import { CheckoutLanguagesManager } from "../../../../components/admin/CheckoutLanguagesManager";
---

<AdminLayout title="Checkout Languages">
  <div class="container py-6 space-y-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold tracking-tight">Checkout Languages</h1>
        <p class="text-muted-foreground">
          Manage checkout form languages, field labels, and visibility settings.
        </p>
      </div>
    </div>

    <CheckoutLanguagesManager client:idle />
  </div>
</AdminLayout>
