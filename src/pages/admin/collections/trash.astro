---
// src/pages/admin/collections/trash.astro
import AdminLayout from "@/layouts/AdminLayout.astro";
import { CollectionsList } from "@/components/admin/collections-list";
import { Button } from "@/components/ui/button";
import { Layers } from "lucide-react";
---

<AdminLayout title="Collections Trash">
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold tracking-tight">Collections Trash</h1>
        <p class="text-muted-foreground">
          View, restore, or permanently delete trashed collections.
        </p>
      </div>
      <a href="/admin/collections">
        <Button variant="outline" size="sm">
          <Layers client:visible className="mr-2 h-4 w-4" />
          View Active
        </Button>
      </a>
    </div>
    <CollectionsList client:idle showTrashed={true} />
  </div>
</AdminLayout>
