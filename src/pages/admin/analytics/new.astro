---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import { AnalyticsForm } from "../../../components/admin/AnalyticsForm";
---

<AdminLayout title="Add Analytics Script">
  <div class="container py-10">
    <div class="mb-10">
      <h1 class="text-3xl font-bold">Add Analytics Script</h1>
      <p class="text-muted-foreground mt-2">
        Add a new analytics or tracking script to your site.
      </p>
    </div>

    <div class="max-w-3xl">
      <AnalyticsForm client:idle />
    </div>
  </div>
</AdminLayout>

