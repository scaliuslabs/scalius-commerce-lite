---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import { PagesList } from "../../../components/admin/pages-list";
import { Button } from "../../../components/ui/button";
import { FileText } from "lucide-react";

const pageTitle = "Page Trash";
---

<AdminLayout title={pageTitle}>
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold tracking-tight">{pageTitle}</h1>
        <p class="text-muted-foreground">
          View, restore, or permanently delete trashed pages.
        </p>
      </div>
      <a href="/admin/pages">
        <Button variant="outline" size="sm">
          <FileText client:visible className="mr-2 h-4 w-4" />
          View Active
        </Button>
      </a>
    </div>
    <PagesList client:idle showTrashed={true} />
  </div>
</AdminLayout>
