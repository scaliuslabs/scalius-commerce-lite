---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import { PagesList } from "../../../components/admin/pages-list";
import { Button } from "../../../components/ui/button";
import { Trash2, Plus } from "lucide-react";

const pageTitle = "Pages";
---

<AdminLayout title={pageTitle}>
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold tracking-tight">{pageTitle}</h1>
        <p class="text-muted-foreground">
          Manage your website pages and content.
        </p>
      </div>
      <div class="flex items-center gap-2">
        <a href="/admin/pages/trash">
          <Button variant="outline" size="sm">
            <Trash2 client:visible className="mr-2 h-4 w-4" />
            View Trash
          </Button>
        </a>
        <a href="/admin/pages/new">
          <Button size="sm">
            <Plus client:visible className="mr-2 h-4 w-4" />
            New Page
          </Button>
        </a>
      </div>
    </div>
    <PagesList client:load showTrashed={false} />
  </div>
</AdminLayout>
