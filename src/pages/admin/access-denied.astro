---
import AdminLayout from "@/layouts/AdminLayout.astro";
import { ShieldAlert } from "lucide-react";

// Get the attempted URL from query params (set by middleware redirect)
const attemptedUrl = Astro.url.searchParams.get("from") || "";
---

<AdminLayout title="Access Denied">
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
    <div class="rounded-full bg-destructive/10 p-6 mb-6">
      <ShieldAlert className="w-12 h-12 text-destructive" strokeWidth={1.5} />
    </div>
    <h1 class="text-2xl font-semibold text-foreground mb-2">Access Denied</h1>
    <p class="text-muted-foreground mb-6 max-w-md">
      You don't have permission to access this page. Contact your administrator if you believe this is an error.
    </p>
    <a
      href="/admin"
      class="inline-flex items-center justify-center rounded-lg bg-primary text-primary-foreground px-4 py-2 text-sm font-medium hover:bg-primary/90 transition-colors"
    >
      Go to Dashboard
    </a>
  </div>
</AdminLayout>
