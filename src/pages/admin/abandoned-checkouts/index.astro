--- 
// src/pages/admin/abandoned-checkouts/index.astro
import AdminLayout from "@/layouts/AdminLayout.astro";
import { AbandonedCheckoutsManager } from "@/components/admin/AbandonedCheckoutsManager";

const pageTitle = "Incomplete Orders";
---

<AdminLayout title={pageTitle}>
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold tracking-tight">{pageTitle}</h1>
      <p class="text-muted-foreground">
        View and manage incomplete orders. Records are automatically cleared when an order is completed.
      </p>
    </div>
    <AbandonedCheckoutsManager client:idle />
  </div>
</AdminLayout>
